// For format details, see https://aka.ms/devcontainer.json.
{
    "name": "Scala",
    // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
    "image": "mcr.microsoft.com/devcontainers/java:1-11-bullseye",
    "features": {
        "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
        "ghcr.io/ebaskoro/devcontainer-features/scala:1": {
            "installSbt": "true"
        }
    },
    "mounts": [ "source=/var/run/docker.sock,target=/var/run/docker-host.sock,type=bind" ],
    // Configure tool-specific properties.
    "customizations": {
        "vscode": {
            "extensions": [
                "scala-lang.scala",
                "scalameta.metals",
                "alssys.interactive-scala"
            ]
        }
    },
    
    #"postCreateCommand": curl -sSLf https://virtuslab.github.io/scala-cli-packages/scala-setup.sh | sh
    
    // Use this environment variable if you need to bind mount your local source code into a new container.
//    "remoteEnv": {
//        "LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}"
//    },

    // Comment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
    "remoteUser": "sbtuser" ,
    //"workspaceMount": "source=c:/dvcs/fpinscala,target=/workspace,type=bind",
    "workspaceMount": "source=c:/dvcs/pokeapp,target=/workspace,type=bind",
    "workspaceFolder": "/workspace"
}
